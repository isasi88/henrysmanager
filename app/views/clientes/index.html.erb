<h1 class="main-h1">Listado de mis clientes</h1>

<table id="clientes" width= "100%" cellspacing="0" class="col-sm-12 table table-responsive">
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Telefono</th>
      <th>Email</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.name %></td>
        <td><%= cliente.telephone %></td>
        <td><%= cliente.email %></td>
        <td><%= link_to '<button class="btn-primary btn-small">Ver</button>'.html_safe, user_clientes_path(current_user) %>
        <%= link_to '<button class="btn-primary btn-small">Editar</button>'.html_safe, edit_user_cliente_path(current_user,cliente) %>
        <%= link_to '<button class="btn-primary btn-small">Borrar</button>'.html_safe, user_cliente_path(current_user,cliente), method: :delete, data: { confirm: 'Â¿Seguro?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<button class="btn-add"><i class="icon-plus"></i></button>'.html_safe, new_user_cliente_path(current_user) %>
