<header class="main-header row">
	<div class="container">
	<div class="logo-container col-sm-6">
	<%= image_tag "logo.png", class: "logo" %>
	</div>
	<div class="actions col-sm-6">
  <% if user_signed_in? %>
		<%= link_to "<button class='btn btn-primary'>Nuevo Proyecto</button>".html_safe, new_user_project_path(current_user) %>
		<%= link_to "<button class='btn btn-primary'>Nuevo Cliente</button>".html_safe, new_user_cliente_path(current_user) %>
  <% end %>

<!-- Button trigger modal -->
<% if user_signed_in? %>
  <%= link_to('<button class="btn btn-secondary">Salir</button>'.html_safe, destroy_user_session_path, method: :delete) %>        
<% else %>
<%= link_to '<button class="btn btn-secondary">Crear mi CRM</button>'.html_safe, new_user_registration_path %> 

<!-- Modal -->
<div class="modal fade" id="loginmodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Entrar en Henrys Manager</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
		<%= form_for(:user, :url => session_path(:user)) do |f| %>
		  <%= f.text_field :email, class: "form-control" %>
		  <%= f.password_field :password, class: "form-control" %>
		  <%= f.check_box :remember_me %>
		  <%= f.label :remember_me, "Recordarme" %>
		  <%= f.submit 'Entrar' %>
		  <%= link_to "He olvidado mi contraseÃ±a", new_password_path(:user) %>
		<% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        <button type="button" class="btn btn-primary">Guardar</button>
      </div>
    </div>
  </div>
</div>
  </li>
<% end %>
	</div>
	</div>
</header>
</div>