<!DOCTYPE html>
<html>
<head>
  <title>Bobolecu</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script async defer type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>
<%= javascript_include_tag "application" %>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js"></script>
</head>
<body>
<% if user_signed_in? %>
<div class="row no-margin">
	<aside class="col-sm-3 menu-principal">
	<div class="row">
		<%= image_tag "logo.png", class: "logo" %>
	</div>
		<ul>
			<%= link_to "<li><i class='icon-book'></i> Proyectos</li>".html_safe, user_projects_path(current_user)%>
			<%= link_to "<li><i class='icon-users'></i> Clientes</li>".html_safe, user_clientes_path(current_user) %>
			<%= link_to "<li><i class='icon-target'></i> Negociaciones</li>".html_safe, user_negociations_path(current_user) %>
			<%= link_to "<li><i class='icon-bookmark'></i> Reuniones</li>".html_safe, user_meetings_path(current_user) %>
			<%= link_to "<li><i class='icon-book'></i> Mis finanzas</li>".html_safe, finances_path(current_user) %>
		</ul>
		<div class="credits">
		<p class="text-center white margin-top">Creado con <i class="icon-heart"> </i> por Henry's en Madrid</br>
		<a href="http://www.somoshenrys.com">www.somoshenrys.com</a></p>
		</div>
	</aside>
	<section class="col-sm-9 dashboard">
	<% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
			<%= render "layouts/dashboard_header.html.erb" %>
			<div class="dashboard-inner">
			<%= yield %>
			</div>
		<% else %>
			<div class="main-page">
			<%= render "pages/landing.html.erb" %>
			<%= yield %>
			</div>
		<% end %>
	</section>
</div>

</body>
</html>
