<h1>Negociaciones en curso
<%= link_to '<button class="btn float-right btn-primary">Nueva Negociacion</button>'.html_safe, new_user_negociation_path(current_user) %>
</h1>




<section class="row">
  <div class="col-sm-12">
  <div class="row">
  <% @negociations.each do |negociation| %>
    <div class="col-sm-6">
      <div class="card cliente row">
        <div class="card-block col-sm-12 card-title">
          <% if negociation.title %>
          <%= link_to negociation.title, "#", class: "client-title"   %>
          <% else %>
          <%= link_to "Sin asignar", "#", class: "client-title"   %>
          <% end %>
          <% if negociation.title %>
          <%= link_to negociation.title, "#", class: "project-title"   %>
          <% else %>
          <%= link_to "Sin asignar", "#", class: "client-title"   %>
          <% end %>
          <% if negociation.state == "1" %>
          <ul class="five steps">
            <li class="complete"><a href="#0">1</a></li>
            <li><a href="#0">2</a></li>
            <li><a href="#0">3</a></li>
            <li><a href="#0">4</a></li>
            <li><a href="#0">5</a></li>
          </ul>
        <% elsif negociation.state == "2" %>
          <ul class="five steps">
            <li class="complete"><a href="#0">1</a></li>
            <li class="complete"><a href="#0">2</a></li>
            <li><a href="#0">3</a></li>
            <li><a href="#0">4</a></li>
            <li><a href="#0">5</a></li>
          </ul>
        <% elsif negociation.state == "3" %>
          <ul class="five steps">
            <li class="complete"><a href="#0">1</a></li>
            <li class="complete"><a href="#0">2</a></li>
            <li class="complete"><a href="#0">3</a></li>
            <li><a href="#0">4</a></li>
            <li><a href="#0">5</a></li>
          </ul>
        <% elsif negociation.state == "4" %>
          <ul class="five steps">
            <li class="complete"><a href="#0">1</a></li>
            <li class="complete"><a href="#0">2</a></li>
            <li class="complete"><a href="#0">3</a></li>
            <li class="complete"><a href="#0">4</a></li>
            <li><a href="#0">5</a></li>
          </ul>
        <% elsif negociation.state == "5" %>
          <ul class="five steps">
            <li class="complete"><a href="#0">1</a></li>
            <li class="complete"><a href="#0">2</a></li>
            <li class="complete"><a href="#0">3</a></li>
            <li class="complete"><a href="#0">4</a></li>
            <li class="complete"><a href="#0">5</a></li>
          </ul>
          <% else %>
          <ul class="five steps">
            <li class="complete"><a href="#0">1</a></li>
            <li class="complete"><a href="#0">2</a></li>
            <li class="complete"><a href="#0">3</a></li>
            <li class="complete"><a href="#0">4</a></li>
            <li class="complete"><a href="#0">5</a></li>
          </ul>
        </div>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
  </div>
  </div>
</section>





