<h1>Negociaciones en curso</h1>

<section class="row">
  <div class="col-sm-12">
    <div class="row">
      <div class="col-sm-6">
      <span class="negociation-details">Empresa y contacto</span>
      </div>
      <div class="col-sm-6">
      <span class="negociation-details">Estado de la negociaci√≥n:</span>
      </div>
      </div>
  <div class="row negociation-list">
  <% @negociations.each do |negociation| %>
    <div class="col-sm-12">

      <div class="negociation-card row">
        <div class="col-sm-6">
        <p class="title"><%= negociation.title %></p>
        <p><%= negociation.business %></p>
        </div>
        <div class="col-sm-6 negociation-state">
        <% if negociation.state == "1" %>
          <ul class="five steps">
            <li class="complete"><a href="#0">1</a></li>
            <li><a href="#0">2</a></li>
            <li><a href="#0">3</a></li>
            <li><a href="#0">4</a></li>
            <li><a href="#0">5</a></li>
          </ul>
        <% elsif negociation.state == "2" %>
          <ul class="five steps">
            <li class="complete"><a href="#0">1</a></li>
            <li class="complete"><a href="#0">2</a></li>
            <li><a href="#0">3</a></li>
            <li><a href="#0">4</a></li>
            <li><a href="#0">5</a></li>
          </ul>
        <% elsif negociation.state == "3" %>
          <ul class="five steps">
            <li class="complete"><a href="#0">1</a></li>
            <li class="complete"><a href="#0">2</a></li>
            <li class="complete"><a href="#0">3</a></li>
            <li><a href="#0">4</a></li>
            <li><a href="#0">5</a></li>
          </ul>
        <% elsif negociation.state == "4" %>
          <ul class="five steps">
            <li class="complete"><a href="#0">1</a></li>
            <li class="complete"><a href="#0">2</a></li>
            <li class="complete"><a href="#0">3</a></li>
            <li class="complete"><a href="#0">4</a></li>
            <li><a href="#0">5</a></li>
          </ul>
        <% elsif negociation.state == "5" %>
          <ul class="five steps">
            <li class="complete"><a href="#0">1</a></li>
            <li class="complete"><a href="#0">2</a></li>
            <li class="complete"><a href="#0">3</a></li>
            <li class="complete"><a href="#0">4</a></li>
            <li class="complete"><a href="#0">5</a></li>
          </ul>
          <% else %>
          <ul class="five steps">
            <li class="complete"><a href="#0">1</a></li>
            <li class="complete"><a href="#0">2</a></li>
            <li class="complete"><a href="#0">3</a></li>
            <li class="complete"><a href="#0">4</a></li>
            <li class="complete"><a href="#0">5</a></li>
          </ul>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  </div>
  </div>
<%= link_to '<button class="btn float-right btn-primary">Nueva Negociacion</button>'.html_safe, new_user_negociation_path(current_user) %>
</section>



