<section class="row">
  <div class="col-sm-12">
  <div class="row">
  <% @projects.each do |project| %>
    <div class="col-sm-6">
      <div class="card cliente row">
      <div class="ribbon"><span><%= project.price %></span></div>
        <div class="card-block col-sm-12">
          <div class="row">
          <div class="cliente-left col-sm-3">
          <% if project.cliente %>
          <span class="project-initials"><%= project.cliente.name.slice(0, 2) %></span>
          <% else %>
          <span class="project-initials"><%= project.title.slice(0, 2) %></span>
          <% end %>
          </div>
          <h3 class="cliente-right col-sm-9 card-title">
          <% if project.cliente %>
          <%= link_to project.cliente.name, "#"   %>
          <% else %>
          <%= link_to "Sin asignar", "#"   %>
          <% end %>
          <% if project.title %>
         <span><%= project.title %></span>
         <% else %>
         <span>Sin asignar</span>
          <% end %></h3>
          </div>
          <div class="project-details">
          <% if project.finished == false %>
            <span class="finished">Finalizado</span>
          <% else %>
            <span class="notfinished">Sin acabar</span>
          <% end %>
          <button class="btn-circle" ><i class="icon-folder"></i></button>
          <button class="btn-circle"><i class="icon-trophy"></i></button>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  </div>
  </div>
</section>